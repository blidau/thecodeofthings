# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file, UTF encoding and 4 space indentation
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true

# Windows-style newlines
[*.{bat,iss}]
end_of_line = crlf

# 4 space indentation
[*.{md,py}]
indent_style = space
indent_size = 4

# 3 space indentation
[*.rst]
indent_style = space
indent_size = 3

# 2 space indentation
[*.{css,html,js,json,less,sass,scss,yml}]
indent_style = space
indent_size = 2

# 4 space width tab indentation
[{Makefile. *.sh}]
indent_style = tab
indent_size = 4
